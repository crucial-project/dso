apiVersion: batch/v1
kind: Job
metadata:
  name: infinispan-creson-client
spec:  
  parallelism: %PARALLELISM%
  completions: %PARALLELISM%
  template:
    spec:
      restartPolicy: OnFailure
      containers:
      - name: infinispan-creson-client
        image: %IMAGE%
        resources:
          requests:
            memory: "256M"
            cpu: "0.5"
        env:
          - name: PROXY
            value: "%PROXY%"
          - name: THREADS
            value: "%THREADS%"
          - name: INSTANCES
            value: "1"
          - name: CALLS
            value: "%CALLS%"
          - name: CLASS
            value: "org.infinispan.creson.AtomicCounter"
          - name: PARALLELISM
            value: "%PARALLELISM%"
          - name: ID
            valueFrom:
              fieldRef:
                fieldPath: status.podIP
