apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: infinispan-creson-server
  labels:
    app: infinispan-creson-server
spec:
  replicas: 3
  selector:
    matchLabels:
      app: infinispan-creson-server
  template:
    metadata:
      labels:
        app: infinispan-creson-server
    spec:
      containers:
       - name: server
         image: "0track/infinispan-creson-server"
         imagePullPolicy: "Always"
         resources:
           requests:
             cpu: 0.5
           limits:
             cpu: 0.5
         env:
         - name: IP
           valueFrom:
             fieldRef:
               fieldPath: status.podIP
         - name: CLOUD
           value: k8s
         - name: EXTRA
           value: "-rf 2"
