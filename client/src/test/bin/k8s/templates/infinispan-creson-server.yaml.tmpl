apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: infinispan-creson-server
  labels:
    app: guestbook
spec:
  replicas: 3
  selector:
    matchLabels:
      tier: infinispan-creson-server
  template:
    metadata:
      labels:
        tier: infinispan-creson-server
    spec:
      containers:
       - name: server
           image: "0track/infinispan-creson-server"
           imagePullPolicy: "Always"
           resources:
             requests:
               cpu: 0.01
         env:
	 - name: IP
  	   valueFrom:
             fieldRef:
               fieldPath: status.podIP
	 - name: CLOUD
	   value: "%CLOUD%"
	 - name: BUCKET
	   value: "%BUCKET%"
	 - name: BUCKET_KEY
	   value: "%BUCKET_KEY%"
	 - name: BUCKET_SECRET
	   value: "%BUCKET_SECRET%"
